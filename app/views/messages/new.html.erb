<h1>New Message</h1>

<%= turbo_frame_tag "new_message" do %>
  <%= form_with(model: [@message.room, @message],
                data: { controller: "reset_form",
                        action: "turbo:submit-end->reset_form#reset" }
                ) do |form| %>
    <div class="field">
      <%= form.text_field :content %>
      <%= form.submit "送信" %>
    </div>
  <% end %>
<% end %>

<%= link_to '戻る', @message.room %>
